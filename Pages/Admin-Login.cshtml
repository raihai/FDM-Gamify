@page
@using Microsoft.AspNetCore.Http
@model fdm_gamify2.Pages.Admin_Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Admin Login</title>
</head>
<body>
<div>
    <form name="LoginDetails" method="post">
        <label for="Username">Username:</label><br>
        <input type="text" id="Username" div name="Username"><br>
        <label for="Password">Password:</label><br>
        <input type="password" id="Password" div name="Password"><br>
        <input type="submit" value="Log In">
    </form>
    <p>@System.Text.Encoding.Default.GetString(HttpContext.Session.Get("ErrorMessage"))</p>
</div>
</body>
</html>