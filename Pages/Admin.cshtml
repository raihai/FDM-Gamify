    <script >
    
        function updateUser(uid) {
            _row = uid.parent("tr");
            var cols = _row.children("td");
            $("#Lastname").val($(cols[1]).text());
            $("#Firstname").val($(cols[2]).text());
            $("#Address").val($(cols[3]).text());
            $("#City").val($(cols[3]).text());
        
            // Change Update Button Text
            $("#updateButton").text("Update");
        }

    
        function deleteUser(){
            var delID = $(this).attr('PersonID');
            var row = $(this).parent().parent();
            
            $.ajax({
                        type:'POST',
                        url:'process.php',
                        data: {delete_id : delID},
                        success:function(data) {
                            if(data === "YES") {
                               row.remove();
                            } 
                            else {
                            }
                        }
                });
        }
        
    </script>
